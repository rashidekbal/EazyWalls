<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_180"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_15">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/category_card"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/dp_24">
        <ImageView
            android:id="@+id/categoryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/category"
            android:scaleType="centerCrop"
            android:src="@drawable/samplebackground"
            />
    </androidx.cardview.widget.CardView>

       <LinearLayout
           app:layout_constraintStart_toStartOf="@id/category_card"
           app:layout_constraintBottom_toBottomOf="@id/category_card"
           app:layout_constraintEnd_toEndOf="@id/category_card"
           app:layout_constraintTop_toTopOf="@id/category_card"
           android:elevation="4dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:background="@android:color/transparent"
           android:gravity="center"
           android:paddingStart="@dimen/dp_30"
           android:alpha="1">
           <TextView
               android:id="@+id/title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Abstract"
               android:textSize="@dimen/sp_35"
               android:textStyle="bold"
               android:textAlignment="textStart"
               android:textColor="@color/allWhite"/>
           <TextView
               android:id="@+id/wallpaperCount"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="640 wallpapers"
               android:textSize="@dimen/sp_15"
               android:textStyle="bold"
               android:textAlignment="textStart"
               android:textColor="@color/allWhite"/>

       </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>