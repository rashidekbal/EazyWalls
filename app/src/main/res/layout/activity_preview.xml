<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PreviewActivity"
    >

    <ImageView
        android:id="@+id/previewImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/samplebackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
<!--    progress bar-->
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:indeterminateTint="@color/allWhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="4dp"
        android:visibility="gone"/>
<!--    top bar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingTop="@dimen/dp_40">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/back_square"
            android:elevation="4dp"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/info_icon"
            android:elevation="4dp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
<!--    side bar-->
    <LinearLayout
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_250"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_140"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/likeBtn"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/heart_icon_inactive"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/downloadBtn"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/download_icon"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/optionsBtn"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/options_icon"
                />
        </LinearLayout>


    </LinearLayout>
<!--    apply btn section-->
    <androidx.cardview.widget.CardView
        android:id="@+id/apply_cardBtn_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:cardCornerRadius="@dimen/dp_16"
        android:background="@color/uiBlue"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginHorizontal="@dimen/dp_15">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/applyBtn"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apply"
        android:textColor="@color/allWhite"
        app:layout_constraintEnd_toEndOf="@id/apply_cardBtn_view"
        app:layout_constraintStart_toStartOf="@id/apply_cardBtn_view"
        app:layout_constraintTop_toTopOf="@id/apply_cardBtn_view"
        app:layout_constraintBottom_toBottomOf="@id/apply_cardBtn_view"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>