<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.HomeFragment"
    android:orientation="vertical">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefreshLayout">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_4">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_featured_layout_heading"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_28"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_180"
                        app:cardCornerRadius="24dp"
                        android:layout_marginTop="@dimen/dp_15"
                        android:elevation="4dp">

                        <ImageView
                            android:id="@+id/featured1_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:contentDescription="@string/main_landing_view"
                            android:scaleType="centerCrop"
                            android:src="@drawable/wallpaper_placeholder"
                            android:tag="1" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_100"
                        android:orientation="horizontal"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="16dp"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:elevation="4dp">
                            <ImageView
                                android:id="@+id/featured2_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/wallpaper_placeholder"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/sub_images"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="16dp"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:elevation="4dp"
                            >
                            <ImageView
                                android:id="@+id/featured3_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/wallpaper_placeholder"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/sub_images"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/moreFeaturedBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="16dp"
                                android:elevation="4dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/light_orange_image_placeholder"
                                    android:scaleType="centerCrop"
                                    android:contentDescription="@string/sub_images"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/featured_image_countText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="+4"
                                android:textColor="@color/allWhite"
                                android:textStyle="bold"
                                android:elevation="5dp"
                                android:textSize="@dimen/sp_30"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textAlignment="center"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:layout_marginTop="@dimen/dp_10">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/trending"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_28"/>
                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:src="@drawable/fire_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:contentDescription="@string/fire_icon"/>

                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/reloadView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_300"
                        android:visibility="gone"
                        >

                        <ImageView
                            android:id="@+id/reloadIcon"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:src="@drawable/reload_icon"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/reload_icon"/>
                        <TextView
                            android:layout_below="@+id/reloadIcon"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="@string/try_reloading"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/TrendingShimmerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <include layout="@layout/wallpaper_shimmer_card"/>
                            <include layout="@layout/wallpaper_shimmer_card"/>
                            <include layout="@layout/wallpaper_shimmer_card"/>
                        </LinearLayout>

                    </com.facebook.shimmer.ShimmerFrameLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>






</LinearLayout>